<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="DemoSuite">


	<!-- <parameter name="" value=""></parameter> Suite level parameter -->

	<parameter name="url"
		value="https://opensource-demo.orangehrmlive.com/web/index.php/auth/login" />
	<parameter name="userName" value="Admin" />
	<parameter name="password" value="admin123" />
	<test name="OrangeHRMLogin">
		<classes>
			<class name="com.hyr.Test.OrangeHRM">
				<methods>
					<include name="setUp" />
					<include name="launchApp" />
					<include name="loginToApplocation" />
					<include name="myInfo" />
					<include name="verifyLogin" />
					<include name="tearDown" />
				</methods>
			</class>
		</classes>
	</test>


	<test name="OrangeHRMMyInfo">
		<classes>
			<class name="com.hyr.Test.OrangeHRM">
				<methods>
					<include name="setUp" />
					<include name="launchApp" />
					<include name="loginToApplocation" />
					<include name="myInfo" />
					<include name="verifyLogin" />
				</methods>
			</class>
		</classes>
	</test>


	<test name="testGoogle" enabled="false">
		<classes>
			<class name="com.hyr.Test.FirstTest">
				<methods>
					<include name="testGoogle" />
					<include name="testTravel" />
				</methods>
			</class>
		</classes>
	</test>

	<test name="ParameterValidation">
		<parameter name="browserName" value="Chrome" />  								 <!-- Test level parameter -->
		<classes>
			<class name="com.hyr.Test.ParameterOrangeHRM">
				<methods>
					<include name="setUp" />
					<include name="launchApp" />
					<include name="enterLoginDetails" />
					<include name="verifyLogin" />
					<include name="verifyMyInfo" />
				</methods>
			</class>
		</classes>
	</test>
</suite> 
